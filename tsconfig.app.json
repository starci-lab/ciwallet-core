{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ciwallet-sdk/types": ["./packages/types"],
      "@ciwallet-sdk/providers": ["./packages/providers"],
      "@ciwallet-sdk/utils": ["./packages/utils"],
      "@ciwallet-sdk/classes": ["./packages/classes"],
      "@ciwallet-sdk/hooks": ["./packages/hooks"],
      "@ciwallet-sdk/misc": ["./packages/misc"],
      "@ciwallet-sdk/core": ["./packages/core"],
      "@ciwallet-sdk/constants": ["./packages/constants"],
      "@ciwallet-sdk/abi": ["./packages/abi"],
      "@ciwallet-sdk/contracts": ["./packages/contracts"]
    }
  },
  "include": ["src", "packages", "global.d.ts"]
}
