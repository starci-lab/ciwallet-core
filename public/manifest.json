{
  "manifest_version": 3,
  "name": "Example Extension",
  "version": "1.0.0",
  "description": "Nomas Wallet overlay extension",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Nomas Wallet"
  },
  "permissions": [
    "scripting", 
    "activeTab",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}