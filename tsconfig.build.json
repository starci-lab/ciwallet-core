{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
  },
  "include": ["packages/**/*"],
  "exclude": ["src", "**/*.test.ts", "**/*.spec.ts", "dist", "node_modules"]
}
